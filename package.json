    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/webpack": "^4.39.5",
    "@types/webpack-dev-server": "^3.4.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.3",
    "html-webpack-plugin": "^3.2.0",
